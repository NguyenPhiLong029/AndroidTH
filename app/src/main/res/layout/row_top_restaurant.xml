<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivImageTopRestaurant"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_address" />

    <TextView
        android:id="@+id/tvNameTopRestaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/ivImageTopRestaurant"
        app:layout_constraintStart_toStartOf="@+id/ivImageTopRestaurant"
        app:layout_constraintTop_toBottomOf="@+id/ivImageTopRestaurant" />

    <TextView
        android:id="@+id/tvRateTopRestaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/tvNameTopRestaurant"
        app:layout_constraintStart_toStartOf="@+id/tvNameTopRestaurant"
        app:layout_constraintTop_toBottomOf="@+id/tvNameTopRestaurant" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvRateTopRestaurant"
        app:layout_constraintStart_toEndOf="@+id/tvRateTopRestaurant"
        app:layout_constraintTop_toTopOf="@+id/tvRateTopRestaurant"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_baseline_star_rate_24" />
</androidx.constraintlayout.widget.ConstraintLayout>